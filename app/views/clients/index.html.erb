<h1>Listing clients</h1>

<div >
	<%= render "filters" %>
</div>

<table>
  <tr>
	<th>Nome</th>
	<th>Status</th>
	<th>Ações</th>
  </tr>

<% @clients.each do |client| %>
  <tr>
	<td>
		<%= client.name %>
	</td>
	<td>
		<%= client.status %>
	</td>
    <td>
		<%= link_to 'Show', client %>
    	<%= link_to 'Edit', edit_client_path(client) %>
    	<%= link_to 'Destroy', client, :confirm => 'Are you sure?', :method => :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New client', new_client_path %>